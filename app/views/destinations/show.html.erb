<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>
    <%= @destination.name %>
  </h3>

  <p>
    <strong>Zip:</strong>
    <%= @destination.zip %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @destination.description %>
  </p>

  <%= image_tag(@destination.image_url) %>

  <div class="row">
    <h3>Forecast for <%= @destination.name %>:</h3>
    <% @forecast.days.each do |day| %>
    <h3><%= day[:date] %></h3>
    <h4>High: <%= day[:high] %> F</h4>
    <h4>Low: <%= day[:low] %> F</h4>
    <h4>Conditions: <%= day[:conditions] %></h4>
    <% end %>
  </div>

  <div class="row">
    <%= link_to 'Edit', edit_destination_path(@destination) %> |
    <%= link_to 'Back', destinations_path %>
  </div>
</div>
